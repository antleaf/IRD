= form_with url: "/systems/authorise_user", method: :post do |f|
  %div.modal.fade#authoriseUserModal{tabindex:"-1", role:"dialog","aria-labelledby":"authoriseUserModal","aria-hidden":"true"}
    %div.modal-dialog.modal-lg{role:"document"}
      %div.modal-content
        %div.modal-header
          %h5.modal-title= t(:authorise_a_user)
          %button.close{type:"button", "data-bs-dismiss": "modal", "aria-label":"Close"}
            %span{"aria-hidden":"true"}
              &times;
        %div.modal-body
          = "(#{t(:all_fields_must_be_completed)})"
          %div.container-fluid
            = f.hidden_field :id, value: @system.id
            %div.row.align-items-center.field
              %div.col-3.field-name
                = f.label :email, :class=>"form-label"
              %div.col
                = f.text_field :email, :class=>"form-control"
            %div.row.align-items-center.field
              %div.col-3.field-name
                = f.label :fore_name, :class=>"form-label"
              %div.col
                = f.text_field :fore_name, :class=>"form-control"
            %div.row.align-items-center.field
              %div.col-3.field-name
                = f.label :last_name, :class=>"form-label"
              %div.col
                = f.text_field :last_name, :class=>"form-control"
        %div.modal-footer
          .actions
            = f.submit t("buttons.save_record"), :class => 'btn btn-primary'
