
%div.row
  %div.col-md-5.col-lg-4
    %div.search-filter-sidebar
      %div.reset-filter-button
        =link_to t(:reset), browser_path, class: 'btn btn-primary form-button'
      %h5= t(:search_by_name)
      = render 'search_form', "@facets": @facets
  %div.col-md-7.col-lg-8
    %div.row
      %div.col-md-2
        %div{style:"font-size: 1.5em;"}
          = render '_shared/download_machine_readable_data_buttons', formats: [:json,:csv] unless @systems.empty?
      %div.col-md-10
        = render '_shared/paginator'
    = render 'cards', collection: @systems, cached: true
    = render '_shared/paginator'
